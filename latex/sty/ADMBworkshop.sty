% Package: ADMBworkshop
% Purpose: Apply settings to many Beamer slideshows
% Options: [simple] suppresses between-section TOC
% History: 20 Feb 2011 arnima created for ICES ADMB course

\DeclareOption{simple}{\AtBeginSection{}}
\AtBeginSection
{
  \begin{frame}<beamer>{Outline}
    \tableofcontents[currentsection,currentsubsection]
  \end{frame}
}
\ProcessOptions

